{
  "name": "itforce-helper",
  "displayName": "ITForce Helper - AI-Powered Code Visualization",
  "description": "ðŸš€ Generate beautiful flowcharts from Java code automatically. AI-driven, simple and fast code visualization tool. Supports cloud AI APIs and local Ollama models.",
  "publisher": "bruce086",
  "version": "0.0.852504",
  "license": "MIT",
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "ai assistant",
    "code visualization",
    "flowchart",
    "java",
    "mermaid",
    "code analysis",
    "ai coding",
    "ollama",
    "code helper"
  ],
  "engines": {
    "vscode": "^1.98.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "itforce-helper.openChat",
        "title": "ITForce: Open Chat"
      },
      {
        "command": "itforce-helper.generateFlowchart",
        "title": "ðŸ”„ Generate Flowchart"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname == .java",
          "command": "itforce-helper.generateFlowchart",
          "group": "itforce"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .java",
          "command": "itforce-helper.generateFlowchart",
          "group": "itforce"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "itforce-helper",
          "title": "ITForce Helper",
          "icon": "resources/robot-icon.svg"
        }
      ]
    },
    "views": {
      "itforce-helper": [
        {
          "type": "webview",
          "id": "itforce-helper.chatView",
          "name": "ITForce Assistant"
        }
      ]
    },
    "configuration": {
      "title": "ITForce Helper",
      "properties": {
        "itforceHelper.deepseekApiKey": {
          "type": "string",
          "default": "",
          "markdownDescription": "**Legacy**: Cloud AI API Key (deprecated, use cloudApiKey instead). Can also be set via DEEPSEEK_API_KEY environment variable.",
          "order": 1
        },
        "itforceHelper.deepseekApiUrl": {
          "type": "string",
          "default": "https://api.deepseek.com/v1/chat/completions",
          "description": "Legacy: Cloud AI API URL (deprecated, use cloudApiUrl instead)"
        },
        "itforceHelper.ollamaUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama server URL for local AI models"
        },
        "itforceHelper.defaultOllamaModel": {
          "type": "string",
          "default": "",
          "description": "Default Ollama model to use for code analysis"
        },
        "itforceHelper.ollamaModel": {
          "type": "string",
          "default": "codellama:latest",
          "description": "Ollama model name for code processing"
        },
        "itforceHelper.cloudApiUrl": {
          "type": "string",
          "default": "https://api.deepseek.com/v1/chat/completions",
          "description": "Cloud AI API URL (supports OpenAI-compatible APIs)"
        },
        "itforceHelper.cloudApiKey": {
          "type": "string",
          "default": "",
          "description": "Cloud AI API Key for authentication"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "@vscode/test-electron .",
    "vsce:package": "vsce package",
    "vsce:publish": "vsce publish"
  },
  "dependencies": {
    "node-fetch": "^2.6.12"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/node-fetch": "^2.6.12",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/boma086/itforce-helper.git"
  }
}
